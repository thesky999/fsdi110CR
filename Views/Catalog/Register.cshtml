@{
    ViewData ["Title"] = "Register Property";

}

<form class="col-8">
    <h3>Register Property</h3>

    <div class="form-group row">
        <label class="col-4 col-form-label">Name:</label>
        <div class="col-8">
            <input id="txtName" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Rooms:</label>
        <div class="col-8">
            <input id="txtRooms" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Bathrooms:</label>
        <div class="col-8">
            <input id="txtBathrooms" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Price:</label>
        <div class="col-8">
            <input id="txtPrice" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Area (sq ft):</label>
        <div class="col-8">
            <input id="txtSqrFeet" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Image Url:</label>
        <div class="col-8">
            <input id="txtImageUrl" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Description:</label>
        <div class="col-8">
            <textarea id="txtDescription" type="text" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-8 offset-4">
            <button type="button" id="btnSave" class="btn btn-info">Save Property</button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="/js/register.js"></script>
}